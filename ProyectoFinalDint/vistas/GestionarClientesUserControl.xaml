<UserControl x:Class="ProyectoFinalDint.vistas.GestionarClientesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion1="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox 
        x:Name="lista"
        ItemsSource="{Binding Path=ListaClientes}" Width="799">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate >
                <TextBlock
                HorizontalAlignment="Left"
                Margin="10">
                <Run Text="{Binding Path=Nombre}"/>
                <Run Text=" - "/>
                <Run Text="{Binding Path=Documento}"/>
                <Run Text=" - "/>
                <Run Text="{Binding Path=Edad}"/>
                </TextBlock>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>

</UserControl>
